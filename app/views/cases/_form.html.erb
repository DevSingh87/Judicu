<div class="block">
                            <div class="navbar navbar-inner block-header">
                                <div class="muted pull-left">Case Details</div>
                                </div>
                            <div class="block-content collapse in">
                                <div class="span12">
								
								<div class="container-fluid">
 <%= form_for(@case, :html => { :class => "form-horizontal" } ) do |f| %>
  <% if @case.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@case.errors.count, "error") %> prohibited this case from being saved:</h2>

      <ul>
      <% @case.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row-fluid">
            <div class="span10bgcolor">
              <div class="control-group">
                <label class="control-label">Case Title</label>
                <div class="controls">
                  <%= f.text_field :case_title, :class =>"input-xxlarge" %>
                </div>
              </div>             
            </div>
    </div>
    <div class="row-fluid">
            <div class="span5 bgcolor">
              <div class="control-group">
                <label class="control-label">Case Type</label>
                <div class="controls">
                  <%= f.text_field :case_type, :class =>"input-medium" %>
                </div>
              </div>
            </div><!--/span-->
            <div class="span3 bgcolor">
              <div class="control-group">
                <label class="control-label">Case Taken As</label>
                <div class="controls">
                  <%= f.text_field :case_taken_as, :class =>"input-medium" %>
                </div>
              </div>
            </div><!--/span-->
     </div><!--/row-->  
	  <div class="row-fluid">
            <div class="span5 bgcolor">
              <div class="control-group">
                <label class="control-label">Case Running Since</label>
                <div class="controls">
                  <%= f.text_field :case_running_since, :class =>"input-medium" %>
                </div>
              </div>
            </div><!--/span-->
            <div class="span4 bgcolor">
              <div class="control-group">
                <label class="control-label">Charges</label>
                <div class="controls">
                  <%= f.text_field :acts, :class =>"input-medium" %>
                </div>
              </div>
            </div><!--/span-->
     </div><!--/row-->  
	 <fieldset>
          <legend>Case Running At</legend>
		  <div class="row-fluid">
            <div class="span5 bgcolor">
              <div class="control-group">
                <label class="control-label">State</label>
                <div class="controls">
                  <%= f.text_field :state, :class =>"input-medium" %>
                </div>
              </div>
            </div><!--/span-->
            <div class="span4 bgcolor">
              <div class="control-group">
                <label class="control-label">District</label>
                <div class="controls">
                  <%= f.text_field :district, :class =>"input-medium" %>
                </div>
              </div>
            </div><!--/span-->
     </div><!--/row-->  
	 <div class="row-fluid">
            <div class="span5 bgcolor">
              <div class="control-group">
                <label class="control-label">Police Station</label>
                <div class="controls">
                  <%= f.text_field :police_station, :class =>"input-medium" %>
                </div>
              </div>
            </div><!--/span-->
            <div class="span4 bgcolor">
              <div class="control-group">
                <label class="control-label">Colony/Village</label>
                <div class="controls">
                  <%= f.text_field :colony_or_village, :class =>"input-medium" %>
                </div>
              </div>
            </div><!--/span-->
     </div><!--/row-->  
		  
	  </fieldset>

  <%= f.fields_for :clients do |bundler| %>
  <legend>Client Details</legend>
  <%= render 'client_fields', f: bundler %>
  <% end %>
  <%= link_to_add_fields "Add Client", f, :clients %> 
  <%= f.fields_for :opponents do |bundler| %>
  <legend>Opponent Details</legend>
  <%= render 'opponent_fields', f: bundler %>
  <% end %>
  
  <%= link_to_add_fields "Add Opponent", f, :opponents %> 
    <div class="row-fluid">
            <div class="span12">
                <label>Additional Details</label>
                  <%= f.text_area :additional_details, :class=>"span12",  :rows => 3 %>
                </div>             
            </div>
    </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>

</div>
                                </div>
                                
                            </div>
                        </div>
